<%- include("../../header.ejs")  %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">DASHBOARD</a></li>
                            <li><a href="/admin/createuser">CREATE BLOGS</a></li>
                            <li><a href="/admin/displayuser">DISPLAY BLOGS</a></li>
                            <li><a href="/logout">LOGOUT</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1>Categories</h1>
                            </div>
                            <div class="dash-nav">
                                <a href="/admin/createcategory" class="btn btn-success">Add Category</a>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>S.NO.</th>
                                
                              
                                <th>Category name</th>
                               
                                <th>Action</th>
                            </tr>
                            <% var i=1 %>
                            <% data.forEach((item)=>{ %>    <!-- FOR EACH LOOP -->
                                <!-- console.log(item) -->
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= item.cname %></td>

                                    <td>
                                        <a href="/admin/viewcategoryuser/<%=item._id%>" class="btn btn-primary"><i class="far fa-eye"></i></a>
                                        <a href="/admin/editcategoryuser/<%=item._id%>" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            <% }) %>                        
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>



<%- include("../../footer.ejs")  %>

