<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">DASHBOARD</a></li>
                            <li><a href="/admin/createuser">CREATE BLOGS</a></li>
                            <li><a href="/admin/displayuser">DISPLAY BLOGS</a></li>
                            <li><a href="/logout">LOGOUT</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1 class="text-success">DISPLAY BLOGS</h1>
                            </div>
                            <div class="dash-nav">
                                <a href="/admin/createblog" class="btn btn-success">Add Post</a>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <tr>
                                <th>S.NO.</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            <% var i=1 %>
                            <% data.forEach((item)=>{ %>  
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= item.title %></td>
                                    <td><%= item.description %></td>
                                    <td><img src="/imageupload/<%= item.image %>" alt="" width="114px" height="80px" style="margin-top:20px;" ></td>

                                    <td>
                                        <a href="/admin/viewuser/<%=item._id%>" class="btn btn-primary"><i class="far fa-eye"></i></a>
                                        <a href="/admin/edituser/<%=item._id%>" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('../../footer.ejs') %>