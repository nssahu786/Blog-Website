<%- include("./header.ejs")  %>
<section class="banner">
  <div class="banner-box">
      <div class="intro-text"></div>
      <img src="assets/images/ba1.jpeg" class="img-fluid" alt="banner" >
  </div>
</section>

<section>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% data.forEach((item)=>{ %>
        <div class="col">
          <div class="card shadow-sm">
            <img src="/imageupload/<%= item.image %>" class="d-block w-100" alt="...">
            <div class="card-body">
                <h5 style="color: #ff5f5f ;">
                    <%= item.title %>
                </h5>
              <p class="card-text"> <%= item.description.slice(0, 90) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="/detail/<%= item._id %>" class="btn btn-secondary">Read more...</a>
                </div>
                <small class="text-muted"><%= item.createdAt.toLocaleDateString() %></small>
              </div>
            </div>
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </div>
</section>
<%- include("./footer.ejs")  %>