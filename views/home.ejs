<%- include('./header.ejs') %>
<!-- SLIDER SECTION START -->
<section>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="2000">
            <img src="/assets/images/y4.jpg" class="d-block" alt="img" height="470px" width="100%">
          </div>
          <div class="carousel-item">
            <img src="/assets/images/1.jpg" class="d-block" alt="img" height="470px" width="100%">
          </div>
          <div class="carousel-item">
            <img src="/assets/images/y3.jpg" class="d-block" alt="img" height="470px" width="100%">
          </div>
          <div class="carousel-item">
            <img src="/assets/images/2.jpg" class="d-block" alt="img" height="470px" width="100%">
          </div>
          
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
</section>
<!-- SLIDER SECTION END -->
<!-- BANNER BLOGS SECTION START -->
    <section>
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% data.forEach((item)=>{ %>
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="/imageupload/<%= item.image %>" class="d-block w-100" alt="img">
                                <div class="card-body">
                                    <h5 class="title"><%= item.title %></h5>
                                    <p class="card-text"><%= item.description.slice(0, 85) %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="/detail/<%= item._id %>" class="btn bot1">Read more...</a>
                                        </div>
                                        <small class="text-muted"><%= item.createdAt.toLocaleDateString() %></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% })%>
                </div>
            </div>
        </div>


    </section>
<!-- BANNER BLOGS SECTION END -->
    <%- include('./footer.ejs') %>